<div class="mt-3 p-5 mb-4 bg-light rounded-3">
  <div class="container-fluid py-5">
    <h1 class="display-5 fw-bold">Workout Lounge!</h1>
    <p class="col-md-8 fs-4">Show off your workout</p>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h2>List of Members</h2>
    </div>
    <% @athletes.each do |athlete| %>
      <div class="col-md-10 member d-flex justify-content-between">
        <%= athlete.full_name %>
        <% if user_signed_in? %>
          <%= link_to 'Follow', friendships_path(friend_id: athlete.id), method: :post, class: 'btn btn-success' unless current_user.follows_or_same?(athlete) %>
        <% end %>
      </div>
    <% end %>
    <% if @pagy.pages > 1 %>
      <div class="pag-bar mt-5 pt-5">
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    <% end %>
  </div>
</div>