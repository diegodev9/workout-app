<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container">
    <%= link_to 'Navbar', root_path, class: 'navbar-brand' %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%=link_to 'Home', root_path, class: 'nav-link active', aria: { current: 'page' } %>
        </li>
        <li class="nav-item">
          <%= link_to 'Athletes Den', '#', class: 'nav-link' %>
        </li>
      </ul>
      <%= form_with url: dashboards_search_path, method: :post, class: 'd-flex' do |f| %>
        <%= f.text_field :search_name, placeholder: 'Search', class: 'form-control me-2' %>
        <%= f.submit 'Search', class: 'btn btn-outline-success' %>
      <% end %>
    </div>
