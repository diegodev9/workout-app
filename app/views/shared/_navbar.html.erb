        <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'btn btn-danger mx-1' %>
      <% else %>
        <%= link_to 'Sign in', new_user_session_path, class: 'btn btn-primary mx-1' %>
        <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-success mx-1' %>
      <% end %>
    </div>
  </div>
