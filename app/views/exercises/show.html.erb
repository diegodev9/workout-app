<div class="row">
  <div class="offset-md-1 col-md-10">
    <h2 class="show-header">
      Showing <%= "#{@exercise.user.full_name}'s Workout Details" %>
    </h2>
    <div class="row">
      <div class="col-md-10 member">
        <div class="row">
          <div class="col-4">
            <strong>Duration (min)</strong>
          </div>
          <div class="col-8">
            <%= @exercise.duration_in_min %>
          </div>
          <div class="col-4">
            <strong>Workout Details:</strong>
          </div>
          <div class="col-8">
            <%= truncate(@exercise.workout, length:50) %>
          </div>
          <div class="col-4">
            <strong>Activity date:</strong>
          </div>
          <div class="col-8">
            <%= @exercise.workout_date %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>